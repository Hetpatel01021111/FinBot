rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // All user data (documents and nested subcollections) under users/{userId}/...
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: public metadata if you have any public docs
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Test collection for development/testing
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Server-side operations with Firebase Admin SDK are not evaluated by rules,
    // but if you also use Custom Auth tokens on client, you can allow specific providers:
    // match /{document=**} {
    //   allow read, write: if request.auth.token.firebase.sign_in_provider == 'custom';
    // }
  }
}
